
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ILayout.cshtml";
}

<h2>Index</h2>

<a href="@Url.Action("AddOrEdit","MVCContacts")" class="btn btn-sm btn-info"><i class="fa fa-plus-circle"></i>Create New</a>


<table class="table" id="ContactListTable">
    <thead  style="background-color:black;color:white">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>

            <th>
                Type
            </th>
            <th>
                BillingPersonName
            </th>
            <th>
                Company Name
            </th>
            <th>
                Billing TRN
            </th>

            <th>
                Status
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>

</table>




@section scripts{
    <script>


        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'

            if (successMessage != '') {
                alertify.success(successMessage);


            }

            if (successMessage != '') {
                successMessage = '';
                delete ('@TempData["SuccessMessage"]');
            }

        });



    </script>

}

   